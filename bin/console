#!/usr/bin/env ruby

require "bundler/setup"
Bundler.require

require "pry"
require "irb"

require "active_support"
require "active_model"
require "shortcut_ruby"
require "dotenv/load"

def load_paths!
  lib_files.each do |f|
    # puts f
    pre_constants = Object.constants
    load f
    @defined_constants = defined_constants.merge(Object.constants - pre_constants)
  end
  :ok
end

def defined_constants
  @defined_constants ||= [].to_set
end

def lib_files
  path = File.expand_path("../..", __FILE__)

  [
    'lib/behaviors',
    'lib/support',
    'lib/models',
    'lib/models/google_workspace',
    'lib/models/ms_excel',
    'lib/models/custom_fields',
    'lib/tasks',
    'lib',
  ].flat_map do |dir|
    Dir.glob("#{path}/#{dir}/*.rb")
  end
end

def reload!
  defined_constants.each do |const_name|
    begin
      Object.send(:remove_const, const_name)
    rescue => e
      puts "Ignoring #{e}"
    end
  end
  load_paths!
end

load_paths!

Pry.start
# IRB.start
