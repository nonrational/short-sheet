#!/usr/bin/env ruby

require "bundler/setup"
Bundler.require

require "pry"
require "irb"

require "active_support"
require "active_model"
require "shortcut_ruby"
require "dotenv/load"

def load_paths!
  path = File.expand_path("../..", __FILE__)
  files = Dir.glob("#{path}/**/*.rb").sort
  files.each do |f|
    # puts f
    load f
  end
  files.length
end

def reload!
  Object.send(:remove_const, :Scrb)
  load_paths!
end

load_paths!

Pry.start
# IRB.start
